    <%- include ("partial/logout.ejs") %>
    
    <div class="create-new-product-form">

        <div class="create-new-product-form-header"><h2>Create new product</h2></div>

        <form action="/admin" class="createproduct" method="post">

            <div class="form-group">
                <label for="title">Product title</label>
                <input class="form-control" type="text" name="title"/>
            </div>

            <div class="form-group">
                <label for="imgUrl">Image URL</label>
                <input class="form-control" type="text" name="imgUrl"/>
            </div>

            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="text" name="price"/>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea rows="4" cols="50" class="form-control" type="text" name="description"></textarea>
            </div>

            <div class="form-group">
                <label for="size">Size</label>
                <input class="form-control" type="text" name="size"/>
            </div>
            
            <div class="form-check">
                <label class="form-check-label" for="newArrival">New arrival: </label>
                <input class="form-check-input" type="checkbox" name="newArrival">
            </div>

            <div class="form-check">
                <label class="form-check-label" for="topSeller">Top seller: </label>
                <input class="form-check-input" type="checkbox" name="topSeller">
            </div>

            <div class="form-check">
                <label class="form-check-label" for="male">Male: </label>
                <input class="form-check-input" type="checkbox" name="male">
            </div>

            <div class="form-check">
                <label class="form-check-label" for="female">Female: </label>
                <input class="form-check-input" type="checkbox" name="female">
            </div>
            <div class="form-button-container">
                <button type="submit" class="btn btn-dark">Create product</button>
            </div>
            
        </form>
    </div>


