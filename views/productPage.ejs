<!DOCTYPE html>
<html lang="en">
<%- include ("partial/header.ejs") %>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12" id="subscribebox">
                SUBSCRIBE FOR 10% OFF
            </div>
        </div>
    </div>
    <!-- Navbar -->
    <%- include ("partial/navbar.ejs") %>

    <section id="productPage">
        <!-- Categories -->
        <div class="categoryContainer">
            <div class="categoryContainerHeader">
                <h2><%= heading %></h2>
                <p><%= headingDescription %></p>
            </div>
            <div class="categoryContainerButtons">
                <p><a href="/<%= otherCategories[0] %>">Shop <%= otherCategories[0] %></a></p>
                <p><a href="/<%= otherCategories[1] %>">Shop <%= otherCategories[1] %></a></p>
            </div>
        </div>

        <!-- Products -->

        <div class="productContainer">
            <% productsShow.forEach((Item_per_page) => { %>
            <div class="product">

                <div class="productImage">
                    <a href="/products/<%= Item_per_page._id %>"><img src="<%= Item_per_page.imgUrl %>"
                            alt="productImage"></a>
                </div>
                <div class="productInfo">
                    <div class="productTitle">
                        <span class="title"><%= Item_per_page.title %></span>
                        <span class="colors">ooo</span>
                    </div>
                    <div class="productPrice">
                        <span class="price"><%= Item_per_page.price %> SEK</span>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

    </section>

    <% for( let i = 1; i < totalPages +1; i++ ) { %>
    <a href="/products/?page=<%=i%>"><%=i%></a>

    <% } %>


</body>

</html>