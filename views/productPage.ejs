<!DOCTYPE html>
<html lang="en">
<%- include ("partial/header.ejs") %>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12" id="subscribebox">
                SUBSCRIBE FOR 10% OFF
            </div>
        </div>
    </div>
    <!-- Navbar -->
    <%- include ("partial/navbar.ejs") %>

    <section id="productPage">
        <!-- Categories -->
        <div class="categoryContainer">
            <div class="categoryContainerHeader">
                <h2><%= heading %></h2>
                <p><%= headingDescription %></p>
            </div>
            <div class="categoryContainerButtons">
                <p><a href="/<%= otherCategories[0] %>">Shop <%= otherCategories[0] %></a></p>
                <p><a href="/<%= otherCategories[1] %>">Shop <%= otherCategories[1] %></a></p>
            </div>
        </div>

        <!-- Products -->

        <div class="productContainer">
            <% productsShow.forEach((product) => { %>
            <div class="product">

                <div class="productImage">
                    <a href="/products/<%= product._id %>"><img src="<%= product.imgUrl %>"
                            alt="productImage"></a>
                </div>
                <div class="productInfo">
                    <div class="productTitle">
                        <span class="title"><%= product.title %></span>
                        <span class="colors">ooo</span>
                    </div>
                    <div class="productPrice">
                        <span class="price"><%= product.price%> SEK</span>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <div class="show-more">
            <% if(totalPages !== itemsToShow/itemPerPage ) { %>
                <a href="/<%=route%>/?page=<%=(itemsToShow/itemPerPage) + 1%>">Show more</a>
            <% } else { %>
                <a href="/<%=route%>/?page=1">Show less</a>
            <% } %>
        </div>

    </section>

    



</body>

</html>